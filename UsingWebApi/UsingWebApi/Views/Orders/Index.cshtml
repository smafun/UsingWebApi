@if (Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AddressFrom)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.AddressTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceTypes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TxtField)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr style="cursor:pointer" data-record-id="@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceTypes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TxtField)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

    <script>
        $("tbody tr").click(function () {
            window.location = '/Orders/Edit?Id=' + $(this).data('data-record-id');
        });
    </script>

}